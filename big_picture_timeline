    <script>
        const brilliantBlues = {
            primary: '#004AAD',
            secondary: '#0079FF',
            accent: '#00D2FF',
            neutral: '#F0F8FF',
            text: '#333333'
        };

        const wrapLabel = (label) => {
            const maxLength = 16;
            if (label.length <= maxLength) return label;
            
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';

            words.forEach(word => {
                if ((currentLine + word).length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        };

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };
        
        const commonChartOptions = {
            maintainAspectRatio: false,
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            }
        };

        new Chart(document.getElementById('platformComparisonChart'), {
            type: 'bar',
            data: {
                labels: ['Data Control', 'Credential Verification', 'Spam & Malicious Activity', 'Content Quality', 'Governance'],
                datasets: [{
                    label: 'Traditional Platforms',
                    data: [2, 3, 2, 3, 1],
                    backgroundColor: '#FF6B6B',
                    borderColor: '#FF6B6B',
                    borderWidth: 1
                }, {
                    label: 'Protonet',
                    data: [9, 9, 8, 8, 9],
                    backgroundColor: brilliantBlues.secondary,
                    borderColor: brilliantBlues.secondary,
                    borderWidth: 1
                }]
            },
            options: {
                ...commonChartOptions,
                indexAxis: 'y',
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 10,
                        title: {
                            display: true,
                            text: 'Effectiveness / User Empowerment Score'
                        }
                    }
                },
                plugins: {
                    ...commonChartOptions.plugins,
                    title: {
                        display: true,
                        text: 'Platform Feature Effectiveness Comparison'
                    }
                }
            }
        });

        new Chart(document.getElementById('featureBreakdownChart'), {
            type: 'doughnut',
            data: {
                labels: ['User Data Sovereignty', 'Verifiable Credentials', 'Transparent Interactions', 'Quality Content Curation', 'Decentralized Governance'],
                datasets: [{
                    label: 'Feature Importance',
                    data: [30, 25, 20, 15, 10],
                    backgroundColor: [
                        brilliantBlues.primary,
                        brilliantBlues.secondary,
                        brilliantBlues.accent,
                        '#4BC0C0',
                        '#9966FF'
                    ],
                    hoverOffset: 4
                }]
            },
            options: {
                 ...commonChartOptions,
                 plugins: {
                    ...commonChartOptions.plugins,
                    title: {
                        display: true,
                        text: 'Core Pillars of the Protonet Platform'
                    }
                }
            }
        });
        
        const marketGrowthLabels = [
            wrapLabel('Professional Networking Apps'),
            wrapLabel('Online Recruitment'),
            wrapLabel('Blockchain Social Media'),
            wrapLabel('Web3 Social Media Platforms')
        ];

        new Chart(document.getElementById('marketGrowthChart'), {
            type: 'bar',
            data: {
                labels: marketGrowthLabels,
                datasets: [{
                    label: 'Market Size in 2024/2025 (USD Billions)',
                    data: [65.64, 39.0, 9.4, 7.2],
                    backgroundColor: brilliantBlues.secondary,
                }, {
                    label: 'Projected Market Size (USD Billions)',
                    data: [201.12, 58.0, 61.8, 471],
                    backgroundColor: brilliantBlues.primary,
                }]
            },
            options: {
                ...commonChartOptions,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Market Size (in Billions USD)'
                        }
                    }
                },
                plugins: {
                    ...commonChartOptions.plugins,
                    title: {
                        display: true,
                        text: 'Market Size and Future Projections'
                    }
                }
            }
        });

    </script>
</body>
